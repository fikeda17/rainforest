<h1>All Products</h1>
<%= link_to "New Product", "/products/new" %>

<!-- renders a helpful message with numbers of displayed vs. total entries -->
<h1><div class="page_entries"><%= page_entries_info @products %></div></h1>

<%= form_tag products_path, method: :get, authentication: false, id: 'search-form' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>
 

<div id="products">
  <%= render @products %>
</div>

<!--outputs several pagination links such as <<First <Prev ... 2 3 4 -->
<%= paginate @products %>
